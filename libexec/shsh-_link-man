#!/usr/bin/env sh

set -e

package="$1"

shopt -s nullglob

files=($SHSH_PACKAGES_PATH/$package/man/*)
files=("${files[@]##*/}")

pattern="\.([1-9])\$"

for file in "${files[@]}"
do
  if [[ "$file" =~ $pattern ]]; then
    n="${BASH_REMATCH[1]}"
    mkdir -p "${SHSH_INSTALL_MAN}/man${n}"
    ln -s "$SHSH_PACKAGES_PATH/$package/man/$file" "$SHSH_INSTALL_MAN/man${n}/${file}"
  fi
done
